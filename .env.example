# Azure AD App Registration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# SharePoint
SHAREPOINT_DOMAIN=yourcompany.sharepoint.com

# Cleanup settings
RETENTION_DAYS=8
CRON_SCHEDULE=0 2 * * *

# Safety: set to false to actually delete files
DRY_RUN=true

# Purge 1st stage recycle bin (optional, default: false)
PURGE_FIRST_STAGE=false

# Certificate auth for 2nd stage recycle bin (optional)
# Generate: openssl req -x509 -newkey rsa:2048 -keyout certs/key.pem -out certs/cert.pem -days 365 -nodes
# Upload cert.pem to Azure AD App Registration > Certificates & secrets
CERT_KEY_PATH=/app/certs/key.pem
CERT_THUMBPRINT=your-cert-sha1-thumbprint

# Logging
LOG_LEVEL=INFO
